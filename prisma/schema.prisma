generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
}

model Post {
  id Int @id @default(autoincrement())
  title String
  content String
  summary String
  tags String
  readingTime Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
